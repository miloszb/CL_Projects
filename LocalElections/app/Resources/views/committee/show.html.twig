{% extends 'base.html.twig' %}

{% block body %}
    <h2>Komitet wyborczy</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ committee.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ committee.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ committee.description }}</td>
            </tr>
            <tr>
                <th>Wwwpage</th>
                <td>{{ committee.wwwPage }}</td>
