        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('committee_index') }}">Wszystkie</a>
        </li>
        <li>
            <a href="{{ path('committee_edit', { 'id': committee.id }) }}">Zmień</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń">
            {{ form_end(delete_form) }}
